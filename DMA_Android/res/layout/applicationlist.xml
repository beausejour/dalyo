<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFFFFF">
	<ImageView android:id="@+id/banner" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<TextView android:id="@+id/applisttv" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/applist"
		android:textStyle="bold" android:textSize="15px" android:textColor="#000000" />
	<TextView android:id="@+id/appnametv" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="#000000"
		android:gravity="center" android:textSize="20px" android:textStyle="bold" />
	<GridView android:id="@+id/appsgv" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="#000000"
		android:gravity="center" android:cacheColorHint="#00000000"
		android:verticalSpacing="5px" android:horizontalSpacing="10px"
		android:columnWidth="60px" android:stretchMode="columnWidth"
		android:numColumns="auto_fit" />
</LinearLayout>
