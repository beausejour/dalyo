<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/white">
	<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:tint="#00000000"
		android:layout_marginTop="0px"
		android:src="@drawable/banniere_dalyo1" />
	<TextView android:id="@+id/label1" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="#000044" android:text="@string/login" />
	<EditText android:id="@+id/textLogin" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_below="@+id/label1">
		<requestFocus />
	</EditText>
	<TextView android:id="@+id/label2" android:layout_marginTop="10px"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textColor="#000044"
		android:layout_below="@+id/textLogin" android:text="@string/pwd" />
	<EditText android:id="@+id/textePasswd" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:password="true"
		android:layout_below="@+id/label2">
	</EditText>
	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<CheckBox android:id="@+id/remember_me_cb" android:text="@string/rememberme"
			android:layout_width="wrap_content" android:textColor="#000000" android:layout_gravity="left"
			android:layout_height="wrap_content" android:layout_marginTop="10px" />
		<Button android:id="@+id/ok" android:layout_width="wrap_content" android:layout_marginLeft="250px"
			android:layout_height="wrap_content" android:layout_gravity="right" android:text="@string/run" />
	</LinearLayout>
</LinearLayout>